## Docker compose for PROTOTYPE DEV env

##### Gateway (Envoy) #####
# Envoy configuration file path
ENVOY_FILE=./envoy/envoy.yaml
# The port Envoy proxy exposes on the host machine
PROXY_EXPOSE_PORT=80
# Directory for SSL certificates (uncomment and set if using SSL)
#CERTS_DIR=/home/ecoloop/cert/etc/letsencrypt
# Directory for SSL certificate archives (uncomment and set if using SSL)
# CERTS_ARCHIVE_DIR=/home/ecoloop/cert/etc/letsencrypt/archive/ecoloop.dev

# Auth0 issuer URL for authentication :CHANGE-ME
AUTH0_ISSUER_URL=

##### ecoloop-web #####
# Node environment for web app (development allows non-https)
WEB_NODE_ENV=development
# Docker image for ecoloop-web
ECOLOOP_WEB_IMAGE=hanalooper/ecoloop-web:1.6.1
# Port exposed by ecoloop-web container
ECOLOOP_WEB_EXPOSE_PORT=3080

# Base URL for backend API (ecoloop-server)
BAPI_BASE_URL=http://ecoloop-server:3000
# Key for encrypting sensitive data in web app :CHANGE-ME
CIPHER_KEY=
##### ecoloop-server #####
# Node environment for server app
SERVER_NODE_ENV=development
# Docker image for ecoloop-server
ECOLOOP_SERVER_IMAGE=hanalooper/ecoloop-server:1.6.1
# Port exposed by ecoloop-server container
ECOLOOP_SERVER_EXPOSE_PORT=9080

# CHANGE-ME: The full path for the database storage directory
# In Windows use this format: //c/Users/Public/hanaeco/dbdata
# /your/path/hanaeco-onprem-location/database
# in Windows: //c/Users/(user)/hanaeco/dbdata
DBDATA_LOCATION_ROOT=/opt/hanaeco2/database
# The full path for uploaded file storage
# /your/path/hanaeco-onprem-location/files
# in Windows: //c/Users/(user)/hanaeco/uploadfiles
STORAGE_LOCATION_ROOT=/opt/hanaeco/files
# The full path for the connectors seed data directory
# /your/path/hanaeco-onprem-location/seed-data-connectors :CHANGE-ME
SEED_DATA_CONNECTORS_LOCATION=C:\projects\hanaeco-onprem-template\seed-data-connectors

# Auth0 audience for API access :CHANGE-ME
AUTH0_AUDIENCE=

# Auth0 domain for authentication :CHANGE-ME
AUTH0_DOMAIN=
# Auth0 secret for server-side validation :CHANGE-ME
AUTH0_SECRET=
# Auth0 client ID for server :CHANGE-ME
AUTH0_CLIENT_ID=
# Auth0 client secret for server :CHANGE-ME
AUTH0_CLIENT_SECRET=

# Database username
DB_USERNAME=ecoloop
# Database password :CHANGE-ME
DB_PASSWORD=
# Database name
DB_DATABASE_NAME=ecoloop-onprem

##### ecoloop-ml #####
# Docker image for ecoloop-ml
ECOLOOP_ML_IMAGE=hanalooper/ecoloop-ml:0.9.7
# Port exposed by ecoloop-ml container
ECOLOOP_ML_EXPOSE_PORT=9980

# CHANGE-ME: Secret for NextAuth authentication :CHANGE-ME
NEXTAUTH_SECRET=
